<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanager.controller.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" styleClass="login-container">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Text fill="#2c3e50" text="Task Management" textAlignment="CENTER" wrappingWidth="200.0">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Text>
                  <Text fill="#7f8c8d" text="Organize your life, one task at a time" textAlignment="CENTER" wrappingWidth="300.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" spacing="15.0" styleClass="login-form">
               <children>
                  <TextField fx:id="emailField" promptText="Email Address" styleClass="login-field">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TextField>
                  
                  <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-field">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </PasswordField>
                  
                  <Button fx:id="loginButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onLogin" styleClass="login-button" text="Sign In">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Text fill="#7f8c8d" text="Don't have an account?" />
                        <Hyperlink fx:id="registerLink" onAction="#onRegister" text="Sign Up" />
                     </children>
                  </HBox>
                  
                  <Label fx:id="statusLabel" textAlignment="CENTER" textFill="#e74c3c" visible="false" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
